{
    "name": "RecallAI",
    "dockerComposeFile": ["../Docker/docker-compose.prod.yaml"],
    "service": "api",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csharp",
                "ms-azuretools.vscode-docker",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "forwardPorts": [3000, 7070, 6333, 5672, 15672],
    "portsAttributes": {
        "3000": {
            "label": "Frontend",
            "protocol": "http",
            "visibility": "public"
        },
        "7070": {
            "label": "API",
            "protocol": "http",
            "visibility": "public"
        },
        "6333": {
            "label": "Qdrant",
            "protocol": "http",
            "visibility": "public"
        },
        "5672": {
            "label": "RabbitMQ",
            "protocol": "amqp",
            "visibility": "public"
        },
        "15672": {
            "label": "RabbitMQ Management",
            "protocol": "http",
            "visibility": "public"
        }
    },
    "remoteEnv": {
        "POSTGRES_USERNAME": "${localEnv:POSTGRES_USERNAME}",
        "POSTGRES_PASSWORD": "${localEnv:POSTGRES_PASSWORD}",
        "RABBIT_MQ_USERNAME": "${localEnv:RABBIT_MQ_USERNAME}",
        "RABBIT_MQ_PASSWORD": "${localEnv:RABBIT_MQ_PASSWORD}",
        "OPEN_AI_KEY": "${localEnv:OPEN_AI_KEY}",
        "SMTP_EMAIL": "${localEnv:SMTP_EMAIL}",
        "SMTP_PASSWORD": "${localEnv:SMTP_PASSWORD}"
    },
    "postCreateCommand": "docker-compose -f Docker/docker-compose.prod.yaml up -d"
}